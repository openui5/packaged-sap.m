<mvc:View
	controllerName="sap.m.sample.TableDnD.Controller"
	xmlns:dnd="sap.ui.core.dnd"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:c="sap.ui.core"
	xmlns="sap.m"
	height="100%">
	<Page
		showHeader="false"
		enableScrolling="true"
		class="sapUiContentPadding">
		<content>
			<HBox renderType="Bare">
				<Table
					id="table1"
					mode="SingleSelectMaster"
					growing="true"
					growingThreshold="10"
					beforeOpenContextMenu="onBeforeOpenContextMenu"
					items="{
						path: '/ProductCollection',
						filters: {path: 'Rank', operator: 'EQ', value1: '0'}
					}">
					<contextMenu>
						<Menu>
							<MenuItem text="Move to Selected Products" press="moveToTable2" />
						</Menu>
					</contextMenu>
					<headerToolbar>
						<Toolbar>
							<Title text="Available Products" />
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column
							sortProperty="Name"
							filterProperty="Name">
							<Text text="Product Name" />
						</Column>
						<Column
							sortProperty="Category"
							filterProperty="Category">
							<Text text="Category" />
						</Column>
						<Column
							hAlign="End"
							width="6rem"
							sortProperty="Quantity">
							<Text text="Quantity" />
						</Column>
					</columns>
					<dragDropConfig>
						<dnd:DragDropInfo
							sourceAggregation="items"
							targetAggregation="items"
							targetElement="table2"
							dropPosition="Between"
							drop="onDropTable2"/>
					</dragDropConfig>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{Name}" wrapping="false" />
								<Text text="{Category}" wrapping="false" />
								<Text text="{
									path: 'Quantity',
									type: 'sap.ui.model.type.Integer'
								}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<VBox justifyContent="Center" class="sapUiTinyMarginBeginEnd">
					<Button
						class="sapUiTinyMarginBottom"
						icon="sap-icon://navigation-right-arrow"
						tooltip="Move to selected"
						press="moveToTable2"/>
					<Button
						icon="sap-icon://navigation-left-arrow"
						tooltip="Move to available"
						press="moveToTable1"/>
				</VBox>
				<Table
					id="table2"
					mode="SingleSelectMaster"
					growing="true"
					growingThreshold="10"
					beforeOpenContextMenu="onBeforeOpenContextMenu"
					items="{
						path: '/ProductCollection',
						filters: {path: 'Rank', operator: 'GT', value1: '0'},
						sorter: {path: 'Rank', descending: true}
					}"
					noData="Please drag-and-drop products here.">
					<contextMenu>
						<Menu>
							<MenuItem text="Move to Available Products" press="moveToTable1" />
							<MenuItem text="Move up" press="moveUp" />
							<MenuItem text="Move down" press="moveDown" />
						</Menu>
					</contextMenu>
					<headerToolbar>
						<Toolbar>
							<Title text="Selected Products" />
							<ToolbarSpacer/>
							<Button
								icon="sap-icon://navigation-up-arrow"
								tooltip="Move up"
								press="moveUp"/>
							<Button
								icon="sap-icon://navigation-down-arrow"
								tooltip="Move down"
								press="moveDown"/>
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Text text="Product Name" />
						</Column>
						<Column>
							<Text text="Category" />
						</Column>
						<Column
							hAlign="End"
							width="6rem">
							<Text text="Quantity" />
						</Column>
					</columns>
					<dragDropConfig>
						<dnd:DragDropInfo
							sourceAggregation="items"
							targetElement="table1"
							dropPosition="On"
							drop="onDropTable1"/>
						<dnd:DragDropInfo
							sourceAggregation="items"
							targetAggregation="items"
							dropPosition="Between"
							drop="onDropTable2"/>
					</dragDropConfig>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{Name}" wrapping="false" />
								<Text text="{Category}" wrapping="false" />
								<Text text="{
									path: 'Quantity',
									type: 'sap.ui.model.type.Integer'
								}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</HBox>
		</content>
	</Page>
</mvc:View>