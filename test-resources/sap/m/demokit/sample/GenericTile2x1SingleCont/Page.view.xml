<core:View controllerName="sap.m.sample.GenericTile2x1SingleCont.Page"
	xmlns="sap.m" xmlns:core="sap.ui.core">

	<GenericTile header="Guy Incognito mentioned you in Sales Pitch March:"
		frameType="TwoByOne" press="press"
		headerImage="test-resources/sap/m/demokit/GenericTile2x1SingleCont/images/headerImg2.jpg">
		<tileContent>
			<TileContent footer="New Notifications">
				<content>
					<FeedContent contentText="@@notify Great outcome of the Presentation today. The new functionality and the new design was well received."
						subheader="about 1 minute ago in Computer Market" value="132">
					</FeedContent>
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>

	<GenericTile frameType="TwoByOne" press="press"
		backgroundImage="test-resources/sap/m/demokit/sample/GenericTile2x1SingleCont/images/NewsImage1.png">
		<tileContent>
			<TileContent footer="August 21, 2013">
				<content>
					<NewsContent contentText="SAP Unveils Powerful New Player Comparison Tool Exclusively on NFL.com"
						subheader="SAP News">
					</NewsContent>
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>

	<GenericTile press="press" header="Comparative Annual Totals"
		subheader="Expenses By Region" frameType="TwoByOne" state="Loaded">
		<tileContent>
			<TileContent unit="EUR" footer="Compare across regions"
				frameType="TwoByOne">
				<content>
					<NumericContent value="-431.241.621,5" scale="MM"
						indicator="Up" truncateValueTo="14" valueColor="Error"
						width="100%" />
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>
</core:View>