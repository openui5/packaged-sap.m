<mvc:View
	controllerName="sap.m.sample.GenericTileLineMode.Page"
	height="100%"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page
		showHeader="true">
		<customHeader>
			<OverflowToolbar>
				<ToolbarSpacer />
				<Label text="Tile Actions:" />
				<Switch state="{/actionsScope}" />
			</OverflowToolbar>
		</customHeader>
		<content>
			<VBox fitContainer="true">
				<MessageStrip showIcon="true" type="Information" text="Compare same content of Generic Tiles in regular and in line mode; no line mode equivalent for Slide Tile." class="sapUiTinyMargin"> </MessageStrip>
				<l:HorizontalLayout
					id="TileContainerExpanded"
					allowWrapping="true"
					content="{/tiles}">
					<GenericTile
						header="{title}"
						subheader="{subtitle}"
						state="{=${state} || 'Loaded'}"
						scope="{=${/actionsScope} ? 'Actions' : 'Display'}"
						press="press"
						class="sapUiTinyMarginBegin sapUiTinyMarginTop">
						<tileContent>
							<TileContent unit="{unit}" footer="{footer}">
								<content>
									<NumericContent
										value="{kpivalue}"
										valueColor="{color}"
										indicator="{trend}"
										scale="{scale}" />
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</l:HorizontalLayout>
				<l:HorizontalLayout
					id="SlideTileContainer"
					allowWrapping="true">
					<SlideTile
						tiles="{/slideTile1}"
						scope="{=${/actionsScope} ? 'Actions' : 'Display'}"
						tooltip="SlideTile 1"
						press="pressSlideTile"
						class="sapUiTinyMarginBegin sapUiTinyMarginTop">
						<GenericTile
							backgroundImage="{backgroundImage}"
							state="{=${state} || 'Loaded'}"
							tooltip="{tooltip}"
							frameType="TwoByOne"
							press="press">
							<tileContent>
								<TileContent footer="{footer}">
									<content>
										<NewsContent
											contentText="{contentText}"
											subheader="{subtitle}">
										</NewsContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</SlideTile>
					<SlideTile
						tiles="{/slideTile2}"
						scope="{=${/actionsScope} ? 'Actions' : 'Display'}"
						tooltip="SlideTile 2"
						press="pressSlideTile"
						transitionTime="250" displayTime="2500"
						class="sapUiTinyMarginBegin sapUiTinyMarginTop">
						<GenericTile
							backgroundImage="{backgroundImage}"
							state="{=${state} || 'Loaded'}"
							tooltip="{tooltip}"
							frameType="TwoByOne"
							press="press">
							<tileContent>
								<TileContent footer="{footer}">
									<content>
										<NewsContent
											contentText="{contentText}"
											subheader="{subtitle}">
										</NewsContent>
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</SlideTile>
				</l:HorizontalLayout>
				<html:div class="sapUiTinyMarginBegin sapUiTinyMarginTop">
					<l:HorizontalLayout
						id="tileContainerCollapsed"
						allowWrapping="true"
						content="{/tiles}"
						class="sapMSampleTileContainer">
						<GenericTile
							header="{title}"
							subheader="{subtitle}"
							state="{=${state} || 'Loaded'}"
							scope="{=${/actionsScope} ? 'Actions' : 'Display'}"
							mode="LineMode"
							press="press"
							class="sapUiTinyMarginEnd">
							<tileContent>
								<TileContent footer="{footer}">
									<content>
										<NumericContent
											value="{kpivalue}"
											valueColor="{color}"
											indicator="{trend}"
											scale="{scale}" />
									</content>
								</TileContent>
							</tileContent>
						</GenericTile>
					</l:HorizontalLayout>
				</html:div>
			</VBox>
		</content>
	</Page>
</mvc:View>
