<core:View
	controllerName="sap.m.sample.GenericTileLineMode.Page"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<VBox width="100%">
		<l:HorizontalLayout
			id="TileContainerExpanded"
			allowWrapping="true"
			content="{/tiles/expanded}">
			<GenericTile
				header="{title}"
				subheader="{subtitle}"
				state="{=${state} || 'Loaded'}"
				press="press"
				class="sapUiTinyMarginBegin sapUiTinyMarginTop">
				<tileContent>
					<TileContent footer="{footer}">
						<content>
							<NumericContent
								value="{kpivalue}"
								valueColor="{color}"
								indicator="{trend}"
								scale="{scale}" />
						</content>
					</TileContent>
				</tileContent>
			</GenericTile>
		</l:HorizontalLayout>
		<html:div class="sapUiTinyMarginBegin sapUiTinyMarginTop">
			<l:HorizontalLayout
				id="tileContainerCollapsed"
				allowWrapping="true"
				content="{/tiles/collapsed}"
				class="sapMSampleTileContainer">
				<GenericTile
					header="{title}"
					subheader="{subtitle}"
					state="{=${state} || 'Loaded'}"
					mode="LineMode"
					press="press"
					class="sapUiSmallMarginEnd">
					<tileContent>
						<TileContent footer="{footer}">
							<content>
								<NumericContent
									value="{kpivalue}"
									valueColor="{color}"
									indicator="{trend}"
									scale="{scale}" />
							</content>
						</TileContent>
					</tileContent>
				</GenericTile>
			</l:HorizontalLayout>
		</html:div>
	</VBox>
</core:View>
