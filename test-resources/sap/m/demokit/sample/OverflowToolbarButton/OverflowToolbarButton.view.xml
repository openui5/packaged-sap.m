<mvc:View
        controllerName="sap.m.sample.OverflowToolbarButton.OverflowToolbarButton"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        xmlns="sap.m">

    <Label text="Use this slider to resize the toolbar and observe its behavior."/>

    <Slider value="100" liveChange="onSliderMoved"></Slider>

    <Label text="The buttons show only an icon in the toolbar, but icon and text in the overflow."/>

    <OverflowToolbar id="otb1">
        <Label text="Buttons with text only in the overflow:" />
        <ToolbarSpacer/>
        <OverflowToolbarButton text="Edit" icon="sap-icon://edit"></OverflowToolbarButton>
        <OverflowToolbarButton text="Add" icon="sap-icon://add"></OverflowToolbarButton>
        <OverflowToolbarButton text="Delete" icon="sap-icon://delete"></OverflowToolbarButton>
        <OverflowToolbarButton text="Change" icon="sap-icon://cause"></OverflowToolbarButton>
        <OverflowToolbarButton text="Notes" icon="sap-icon://notes"></OverflowToolbarButton>
    </OverflowToolbar>

</mvc:View>