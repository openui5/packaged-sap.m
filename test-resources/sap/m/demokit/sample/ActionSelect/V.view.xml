<mvc:View
	controllerName="sap.m.sample.ActionSelect.C"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">

	<ActionSelect
		id="select"
		items="{
			path: '/ProductCollection',
			sorter: { path: 'Name' }
		}">
		<items>
			<core:Item key="{ProductId}" text="{Name}" />
		</items>
	</ActionSelect>
</mvc:View>