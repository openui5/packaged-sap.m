<mvc:View
	height="100%"
	controllerName="sap.m.sample.ToolbarAlignment.Toolbar"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page>
		<MessageStrip text="Left and Right aligned content." class="sapUiTinyMargin"/>
		<Toolbar class="sapUiMediumMarginTop">
			<Button text="Reject" type="Reject"/>
			<ToolbarSpacer/>
			<Button text="Accept" type="Accept"/>
		</Toolbar>
		
		<MessageStrip text="Centered content" class="sapUiTinyMargin"/>
		<Toolbar class="sapUiMediumMarginTop">
			<ToolbarSpacer/>
			<Button text="Centered content" type="Accept"/>
			<ToolbarSpacer/>
		</Toolbar>
		
		<MessageStrip text="Right Aligned Content" class="sapUiTinyMargin"/>
		<Toolbar class="sapUiMediumMarginTop">
			<ToolbarSpacer/>
			<Button text="Right Aligned Content" type="Accept"/>
		</Toolbar>
		
		<MessageStrip text="You can have as many sections as you want with ToolbarSpacer" class="sapUiTinyMargin"/>
		<Toolbar class="sapUiMediumMarginTop">
			<Button text="Accept" type="Accept"/>
			<ToolbarSpacer/>
			<CheckBox text="CheckBox"/>
			<ToolbarSpacer/>
			<Button icon="sap-icon://drop-down-list"/>
			<ToolbarSpacer/>
			<RadioButton text="RadioButton"/>
			<ToolbarSpacer/>
			<Button text="Reject" type="Reject"/>
		</Toolbar>
		
		<MessageStrip text="Flexible ToolbarSpacers share the horizontal spaces. So the content centering is not exact centering like in the Bar." class="sapUiTinyMargin"/>
		<Toolbar class="sapUiMediumMarginTop">
			<Button text="This is a very long button text. This is a very long button text."/>
			<ToolbarSpacer/>
			<Button text="Centered Button"/>
			<ToolbarSpacer/>
			<Button text="Short Button"/>
		</Toolbar>
		
		<MessageStrip text="ToolbarSpacer does not have to be flexible, we can give a fixed width to the ToolbarSpacer." class="sapUiTinyMargin"/>
		<Toolbar class="sapUiMediumMarginTop">
			<Input width="100px" placeholder="First Name"/>
			<Input width="100px" placeholder="Last Name"/>
			<ToolbarSpacer width="40px"/>
			<Input type="Email" width="100px" placeholder="Email"/>
			<Input type="Number" width="80px" placeholder="Age"/>
			<ToolbarSpacer/>
			<Button text="Submit" type="Accept"/>
		</Toolbar>
	</Page>
</mvc:View>