<mvc:View
		controllerName="sap.m.sample.LightBox.C"
		xmlns:l="sap.ui.layout"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m">
		<Text text="Click on the images below. This will open the images in their real size if the image size is not bigger than the window size."
			  width="100%"/>
		<Image src="test-resources/sap/ui/demokit/explored/img/HT-6100.jpg"
			   class="sapUiSmallMargin"
			   press="openBeamerLightBox"
			   decorative="false"/>
		<Image src="test-resources/sap/ui/demokit/explored/img/HT-6120.jpg"
			   class="sapUiSmallMargin"
			   press="openUSBLightBox"
			   decorative="false"/>
		<Image src="test-resources/sap/ui/demokit/explored/img/HT-7777.jpg"
			   class="sapUiSmallMargin"
			   press="openSpeakersLightBox"
			   decorative="false"/>
		<Image src="test-resources/sap/ui/demokit/explored/img/nature/ALotOfElephants_small.jpg"
			   class="sapUiSmallMargin"
			   press="openLightBox"
			   width="100px"
			   decorative="false"/>
		<Image src="test-resources/sap/ui/demokit/explored/img/nature/flatFish.jpg"
			   class="sapUiSmallMargin"
			   press="openLightBox"
			   width="100px"
			   decorative="false"/>
		<Image src="test-resources/sap/ui/demokit/explored/img/nature/horses.jpg"
			   class="sapUiSmallMargin"
			   press="openLightBox"
			   width="100px"
			   decorative="false"/>
		<Image src="test-resources/sap/ui/demokit/explored/img/nature/elephant.jpg"
			   class="sapUiSmallMargin"
			   press="openErrorBox"
			   width="100px"
			   decorative="false"/>

</mvc:View>
