<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm="onConfirmViewSettingsDialog"
		resetFilters="onViewSettingsDialogResetFilters">
		<sortItems>
			<ViewSettingsItem text="{i18n>masterSort1}" key="Name" selected="true" />
			<ViewSettingsItem text="{i18n>masterSort2}" key="UnitNumber" />
		</sortItems>
		<groupItems>
			<ViewSettingsItem text="{i18n>masterGroup1}" key="Group1" />
		</groupItems>
		<filterItems>
			<ViewSettingsFilterItem
				text="{i18n>masterFilterName}"
				key="Price"
				multiSelect="false">
				<items>
					<ViewSettingsItem text="{i18n>masterFilter1}" key="Filter1" />
					<ViewSettingsItem text="{i18n>masterFilter2}" key="Filter2" />
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>